<com.flavienlaurent.discrollview.lib.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hmm">

    <com.flavienlaurent.discrollview.lib.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="80sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="Are you Muslim?" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="25dp"
            android:textSize="45sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="And \nAre you Living\nor\nTraveling in Seoul?" />




    <com.example.ljs.mytest.intro_food
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@android:color/holo_red_dark"
        tools:visibility="gone">

        <TextView
            android:id="@+id/intro_food_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="Are you worried about food?"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/intro_food_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:alpha="0.0"
            android:src="@drawable/intropig"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:translationY="50dp"
            android:layout_marginTop="50dp"/>

    </com.example.ljs.mytest.intro_food>

        <com.example.ljs.mytest.intro_pray
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@android:color/holo_green_dark"
            tools:visibility="gone">

            <TextView
                android:id="@+id/intro_pray_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="Do you Looking for a Place to Pray?"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginBottom="50dp"/>

            <ImageView
                android:id="@+id/intro_pray_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:src="@drawable/introhand"
                android:scaleX="0.2"
                android:scaleY="0.2"
                android:translationY="50dp"
                android:layout_marginTop="50dp"/>

        </com.example.ljs.mytest.intro_pray>

        <com.example.ljs.mytest.intro_lucky
            android:layout_width="match_parent"
            tools:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light">

            <TextView
                android:id="@+id/lucky_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:fontFamily="serif"
                android:translationY="-50dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="You're Lucky!"
                android:textSize="36sp" />

        </com.example.ljs.mytest.intro_lucky>

        <com.example.ljs.mytest.intro_translation
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff99"
            android:orientation="vertical"
            tools:visibility="gone">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <ImageView
                android:id="@+id/translation_Image1"
                android:alpha="0"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/introquran"
                android:translationX="-150dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
             />

            <ImageView
                android:id="@+id/translation_Image2"
                android:alpha="0"
                android:layout_width="220dp"
                android:layout_height="110dp"
                android:layout_gravity="right"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/introsawon"
                android:translationX="300dp"
                android:scaleX="1.5"
                android:scaleY="1.5"/>
    <ImageView
        android:id="@+id/translation_Image3"
        android:alpha="0"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:src="@drawable/introseoul"
        android:translationX="-150dp"
        android:scaleX="1.5"
        android:scaleY="1.5"/>

</LinearLayout>
        </com.example.ljs.mytest.intro_translation>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/intrologin"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true"  />

        <TextView
            android:id="@+id/check_this"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="25dp"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="Check this out" />
    </com.flavienlaurent.discrollview.lib.DiscrollViewContent>
</com.flavienlaurent.discrollview.lib.DiscrollView>